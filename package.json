{
  "name": "playground",
  "version": "0.0.1",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "pkg:install": "lerna exec 'yarn'",
    "pkg:build": "lerna run build",
    "prep": "yarn && yarn pkg:install && yarn pkg:build",
    "test:unit": "lerna run test:unit",
    "lint": "eslint \"./packages/**/*.{js,ts,tsx}\"",
    "ci:release": "lerna publish --yes",
    "ci:release:canary": "lerna publish --preid `git rev-parse --short HEAD` --force-publish=\"*\" --canary --yes",
    "bump": "yarn lerna version"
  },
  "devDependencies": {
    "@types/node": "^13.9.1",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "lerna": "^3.18.4",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1"
  }
}
